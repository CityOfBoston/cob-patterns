@require '../../mixins/styled-underline.styl';

.lnk
  color: $optimistic-blue-dark

  &:not(.lnk--white):not(.lnk--yellow)
    styled-underline($white)

  button&
    font-family: inherit
    font-size: inherit
    font-style: inherit
    line-height: inherit
    display: inline
    height: auto
    overflow: visible
    border: none
    padding: 0
    margin: 0
    cursor: pointer

    &--white, &--yellow
      background-color: rgba(0, 0, 0, 0)

  &:link,
  &:visited
    color: $optimistic-blue-dark

  &:hover
    color: $freedom-red-light

  &--white
    color: $white

    &:link,
    &:visited
      color: $white

    &:hover
      color: $freedom-red-light

  &--yellow
    color: $yellow

    &:link,
    &:visited
      color: $yellow

    &:hover
      color: $white
